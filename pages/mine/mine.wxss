/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu";
page{
  background-color: #efefef;
}
.personalInf{
  width: 100%;
  margin-top: 0rpx;
  margin-left: 0rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-bottom:20rpx solid #efefef
}
.scbg{
  background-color: #efefef;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}
.deco{
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: 2px solid #efefef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.ava{
  margin-top: 10rpx;
  width: 180rpx;
  height: 180rpx;
}
.nn{
  margin-top: 40rpx;
  font-size: 38rpx;
  color: black;
  padding-bottom: 40rpx;
}
.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom:20rpx solid #efefef
}

.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 25rpx;
  flex-direction: row;
}
.showname{
  font-size: 34rpx;
  color: #3f51b5;
  font-family: PinFangSC-regular;
  font-weight: bold;
}
.showtime{
  font-size: 25rpx;
  color: #5e5d5d;
  font-family: PinFangSC-regular;
}
.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbbbbb;
}
.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all;
}
.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.like{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.num{
  height: 52rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  columns: #101010;
  position: absolute;
}
.del{
  width: 150rpx;
  height: 70rpx;
  margin-top:15rpx ;
  color: white;
  font-size: 30rpx;
  text-align: center;
  display: flex;
  border-radius: 20rpx;
  background-color: rgb(247, 91, 91);
}
.neirong{
  font-family: PinFangSC-regular;
  margin: auto;
}