/* pages/bottom_menu/bottom_menu.wxss */
.bottomrow{
  background-color: white;
  width: 100%;
  height: 9%;
  bottom: 0rpx;
  /*固定定位可以让bottom生效*/
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.bottomtab{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bottomImg{
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
 /* border: 5rpx solid red;*/
}
.bottomtabText{
  font-size: 35rpx;
  color: #979797;
}